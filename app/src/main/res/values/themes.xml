<resources>

    <style name="Theme.WoodenFish" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" >@color/black</item>
        <!-- Customize your theme here. -->
        <!--        屏幕方向-->
        <item name="android:screenOrientation">portrait</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.WoodenFish.Fullscreen" parent="Theme.WoodenFish">
        <item name="android:windowFullscreen">true</item>
        <item name="android:fullDark">@color/black</item>
        <item name="shapeAppearanceOverlay">
            @style/ShapeAppearanceOverlay.MaterialComponents.MaterialCalendar.Window.Fullscreen
        </item>
    </style>
</resources>